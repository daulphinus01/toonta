<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toonta.app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/toonta_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
        </activity>

        <activity
            android:name=".forms.ToontaLogin"
            android:label="@string/title_activity_toonta_login"
            android:parentActivityName=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.HomePageActivity" />
        </activity>

        <activity
            android:name=".forms.SignUpActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".forms.ToontaLogin"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".forms.ToontaLogin"/>
        </activity>

        <activity android:name=".HomeConnectedActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BankDetailActivity"
            android:theme="@style/FullscreenTheme"
            android:parentActivityName=".HomeConnectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.HomeConnectedActivity" />
        </activity>

        <activity
            android:name=".BankDetailQstActivity"
            android:parentActivityName=".BankDetailActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.BankDetailActivity" />
        </activity>

        <activity
            android:name=".utils.ProfileActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".HomeConnectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeConnectedActivity" />
        </activity>

        <activity
            android:name=".utils.ToontaQuestionActivity"
            android:parentActivityName=".HomeConnectedActivity"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeConnectedActivity" />
        </activity>

        <activity
            android:name=".utils.ToontaQuestionNoAnswerActivity"
            android:parentActivityName=".BankDetailQstActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BankDetailQstActivity" />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f93ba3685339753bc463fee8b4590adcad3e5655" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".utils.ValidateQuestionActivity"
            android:parentActivityName=".utils.ToontaQuestionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".utils.ToontaQuestionActivity" />
        </activity>

        <activity android:name=".forms.SurveyValidationAsAFriendActivity"
            android:parentActivityName=".utils.ValidateQuestionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".utils.ValidateQuestionActivity" />
        </activity>

        <activity android:name=".forms.SMSValidationActivity"
            android:parentActivityName=".forms.SurveyValidationAsAFriendActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".forms.SurveyValidationAsAFriendActivity" />
        </activity>
    </application>

</manifest>