<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toonta.app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/toonta_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".forms.ToontaLogin"
            android:label="@string/title_activity_toonta_login"
            android:parentActivityName=".HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.HomePageActivity" />
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name=".forms.SignUpActivity" />
        <activity
            android:name=".HomeConnectedActivity"
            android:parentActivityName=".HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.HomePageActivity" />
        </activity>
        <activity
            android:name=".BankDetailActivity"
            android:parentActivityName=".HomeConnectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.HomeConnectedActivity" />
        </activity>
        <activity
            android:name=".BankDetailQstActivity"
            android:parentActivityName=".BankDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.toonta.app.BankDetailActivity" />
        </activity>
        <activity
            android:name=".utils.ProfileActivity"
            android:parentActivityName=".HomeConnectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeConnectedActivity"/>
        </activity>
        <activity
            android:name=".utils.ToontaQuestionActivity"
            android:parentActivityName=".HomeConnectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeConnectedActivity" />
        </activity>
        <activity
            android:name="com.toonta.app.activities.LoadingActivity"
            android:theme="@style/SplashTheme">
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="cf87f022df53725b6f9b1a1488b253acbc085a37" />
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>