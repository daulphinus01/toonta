<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_title_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toonta"
        android:layout_centerVertical="true"
        android:textColor="@color/screen_1_text_action_bar"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/toonta_menu_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_settings"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/toonta_settings_text"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
