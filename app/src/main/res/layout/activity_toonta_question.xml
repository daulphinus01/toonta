<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/screen_1_bg"
    tools:context="com.toonta.app.utils.ToontaQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_gray"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center">

            <!-- TITLE -->
            <TextView
                android:id="@+id/qustion_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/screen_1_text"
                android:textSize="22sp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/qst_resp_part_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qustion_screen_question"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:textSize="20sp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.6"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/qst_zone_border">

            <!-- QUESTION -->
            <com.toonta.app.utils.ToontaViewPager
                android:id="@+id/toonta_question_view_pager_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.toonta.app.utils.ToontaViewPager>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp">

            <Button
                android:id="@+id/button_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="@string/button_previous"
                android:paddingEnd="7dp"
                android:paddingRight="7dp"
                android:background="@drawable/qst_zone_border"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <Button
                android:id="@+id/button_submit_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:paddingEnd="7dp"
                android:paddingRight="7dp"
                android:background="@drawable/qst_zone_border"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/useless_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"/>

    </LinearLayout>

</LinearLayout>