<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_1_bg"
    tools:context="com.toonta.app.utils.ToontaQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/screen_bg_title_color"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toonta_question_no_answer_up_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@mipmap/ic_up"/>

            <!-- TITLE -->
            <TextView
                android:id="@+id/qustion_screen_title_no_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:textColor="@color/screen_1_text"
                android:textSize="22sp"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/qst_resp_part_screen_no_answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/white_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.68"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/qst_zone_border">

            <!-- QUESTION -->
            <com.toonta.app.utils.ToontaViewPager
                android:id="@+id/toonta_question_view_pager_area_no_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/useless_layout_over"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:paddingEnd="7dp"
            android:paddingRight="7dp">

            <Button
                android:id="@+id/button_previous_no_answer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:paddingEnd="7dp"
                android:paddingRight="7dp"
                android:visibility="invisible"
                android:background="@drawable/qst_zone_border"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <Button
                android:id="@+id/button_submit_next_no_answer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:paddingEnd="7dp"
                android:paddingRight="7dp"
                android:background="@drawable/qst_zone_border"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/useless_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toonta_question_no_answer_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"/>

</LinearLayout>