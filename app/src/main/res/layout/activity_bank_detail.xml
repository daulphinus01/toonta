<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/screen_1_bg"
tools:context="com.toonta.app.BankDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <ImageView
            android:id="@+id/toonta_bank_detail_up_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@mipmap/ic_up"/>

        <TextView
            android:id="@+id/left_label"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:textSize="25sp"
            android:textColor="@color/screen_1_text"/>

        <TextView
            android:id="@+id/right_label"
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/screen_1_text"/>

    </LinearLayout>



    <ListView
        android:id="@+id/bank_items"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="40dp"
        android:dividerHeight="20.0px">

    </ListView>

</LinearLayout>

