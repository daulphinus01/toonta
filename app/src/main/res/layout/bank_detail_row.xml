<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:alpha="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_weight="0.95"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/bank_detail_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bank_detail_row_remaining_answers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:textColor="@color/row_sub_title"/>

                <TextView
                    android:id="@+id/bank_detail_row_answers_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:textColor="@color/row_sub_title"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/bank_row_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:contentDescription="@string/row_access"
            android:layout_weight="0.05"/>
    </LinearLayout>

</RelativeLayout>

