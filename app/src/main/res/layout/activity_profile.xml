<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_title_color"
    tools:context=".utils.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg_opacity_87"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="30dp">
            <ImageView
                android:id="@+id/toonta_profile_pix"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/toonta_upload_profile_picture_desc"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/first_name"
                        android:enabled="false"
                        android:background="@android:color/transparent"
                        android:hint="@string/fisrt_name"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/last_name"
                        android:background="@android:color/transparent"
                        android:hint="@string/last_name"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/birth_date"
                        android:inputType="date"
                        android:background="@android:color/transparent"
                        android:hint="@string/birth_date"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textSize="18sp"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/email_address"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:hint="@string/email_address"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/phone_number"
                        android:inputType="phone"
                        android:background="@android:color/transparent"
                        android:hint="@string/phone__number"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90"
                    android:layout_marginBottom="6dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/professional_activity"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@android:color/darker_gray">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/toonta_cumilated_points"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:hint="@string/cumulated_points"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/screen_1_1_bg"
                        android:enabled="false"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90">

                    <AutoCompleteTextView
                        android:id="@+id/residence_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/place_of_residence"
                        android:maxLines="1"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_of_residence_area"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/survey_row_zone_border_bg_bleu_clair_angle_90"
                    android:visibility="invisible">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/label_three"
                        android:inputType="text"
                        android:hint="@string/label_three"
                        android:background="@android:color/transparent"
                        android:textColor="@color/screen_1_1_bg"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/toonta_layout_save_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/activity_vertical_margin">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/toonta_save_changes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:paddingEnd="5sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:paddingStart="5sp"
                    android:text="@string/toonta_modify_profile"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
